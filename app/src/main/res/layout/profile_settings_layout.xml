<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Profile pic -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/black">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/icon" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Edit button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/ivProfileEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/cardProfile"
            android:layout_alignEnd="@id/cardProfile"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            app:backgroundTint="@color/white"
            app:elevation="4dp"
            app:rippleColor="@android:color/darker_gray"
            android:src="@drawable/baseline_edit_24"
            app:maxImageSize="20dp"
            app:tint="@color/black"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvProfileFullName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="Avi Hadad"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvProfileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avi@gmail.com"
        android:textSize="14sp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvProfilePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0502999122"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvProfileAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Makabim 7"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"/>
</LinearLayout>
